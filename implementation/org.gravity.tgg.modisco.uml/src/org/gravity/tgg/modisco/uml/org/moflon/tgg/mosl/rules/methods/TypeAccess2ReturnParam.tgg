#using org.gravity.tgg.modisco.uml.*
#using AttrCondDefLibrary.*

#rule AbstractTypeAccess2ReturnParam #with org.gravity.tgg.modisco.uml

#source {
	method:MethodDeclaration{
		++-returnType -> typeAccess
	}

	++typeAccess:TypeAccess{
		++-type -> jType
	}

	jType:Type
}

#target {
	operation:Operation{
		++-ownedParameter -> returnParam
	}

	++returnParam:Parameter{
		++-type -> uType
	}

	uType:Type
}

#correspondence {
	m2o :NamedElement2NamedElement{
		#src->method
		#trg->operation
	}

	++ta2p:TypeAccess2Parameter {
		#src->typeAccess
		#trg->returnParam
	}

	ne2ne:NamedElement2NamedElement {
		#src->jType
		#trg->uType
	}
}

#attributeConditions {
	isReturn(returnParam.direction)
}
