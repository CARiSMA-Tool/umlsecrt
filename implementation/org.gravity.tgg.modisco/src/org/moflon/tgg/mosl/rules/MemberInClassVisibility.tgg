#using org.gravity.tgg.modisco.*
#using AttrCondDefLibrary.*

#rule ClassMemberVisibility #with org.gravity.tgg.modisco
#source { 
		mClass : ClassDeclaration {
		-bodyDeclarations->mBody
	}
	
	mBody:BodyDeclaration{
		++ -modifier->mModifier
	}
	
	++mModifier:Modifier{	
	}
}

#target {
	tClass : TClass {
		-defines->tMember
	}

	tMember:TMember{
		++ -tModifier->tModifier
	}	
	++ tModifier:TModifier{
		
	}
}

#correspondence {
mTypeToTType : TypeToTAbstractType {
	#src->mClass
	#trg->tClass
}

bodyToMember:BodyDeclarationToMember{
	#src->mBody
	#trg->tMember
}

++ mModifierToTModifier:MModifierToTModifier{
	#src->mModifier
	#trg->tModifier
}
}

#attributeConditions {
	DefaultVisibility(mModifier.visibility, tModifier.tVisibility)
}
