<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.gravity</groupId>
  <artifactId>gravity-tool</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <properties>
    <tycho-version>1.2.0</tycho-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
	
  <modules>
    <module>build/org.gravity.features.eclipse</module>
    <module>build/org.gravity.features.hulk</module>
    <module>build/org.gravity.features.modisco</module>
    <module>build/org.gravity.features.refactorings</module>
    <module>build/org.gravity.features.typegraph.basic</module>
    <module>build/org.gravity.license.epl</module>
    <module>build/org.gravity.updatesite</module>
    <module>implementation/org.gravity.eclipse</module>
    <module>implementation/org.gravity.eclipse.ui</module>
    <module>implementation/org.gravity.goblin</module>
    <module>implementation/org.gravity.goblin.tests</module>
    <module>implementation/org.gravity.hulk</module>
    <module>implementation/org.gravity.hulk.annotations</module>
    <module>implementation/org.gravity.hulk.antipatterngraph</module>
    <module>implementation/org.gravity.hulk.refactoringgraph</module>
    <module>implementation/org.gravity.hulk.tests</module>
    <module>implementation/org.gravity.hulk.ui</module>
    <module>implementation/org.gravity.hulk.ui.visualization</module>
    <module>implementation/org.gravity.metrics.sourcemeter</module>
    <module>implementation/org.gravity.modisco</module>
    <module>implementation/org.gravity.refactorings</module>
    <module>implementation/org.gravity.refactorings.tests</module>
    <module>implementation/org.gravity.refactorings.ui</module>
    <module>implementation/org.gravity.security.analysis</module>
    <module>implementation/org.gravity.security.annotations</module>
    <module>implementation/org.gravity.tgg.modisco</module>
    <module>implementation/org.gravity.tgg.modisco.tests</module>
    <module>implementation/org.gravity.tgg.modisco.ui</module>
    <module>implementation/org.gravity.tgg.modisco.uml</module>
    <module>implementation/org.gravity.typegraph.basic</module>
  </modules>
  <build>
    <plugins>
      <plugin>
        <!-- Docu: https://www.eclipse.org/tycho/sitedocs/tycho-surefire/tycho-surefire-plugin/test-mojo.html -->
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-surefire-plugin</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <skipTests>true</skipTests>
          <!-- <useUIHarness>true</useUIHarness> -->
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>Eclipse Photon</id>
      <layout>p2</layout>
      <url>http://download.eclipse.org/releases/photon</url>
    </repository>
    <repository>
      <id>eMoflon Core</id>
      <layout>p2</layout>
      <url>https://raw.githubusercontent.com/eMoflon/emoflon-core-updatesite/master/stable/updatesite/</url>
    </repository>
    <repository>
      <id>eMoflon</id>
      <layout>p2</layout>
      <url>http://emoflon.org/eclipse-plugin/beta/updatesite/</url>
    </repository>
    <repository>
      <id>GRaViTY</id>
      <layout>p2</layout>
      <url>https://gravity-tool.github.io/updatesite</url>
    </repository>
    <repository>
      <id>Henshin</id>
      <layout>p2</layout>
      <url>http://download.eclipse.org/modeling/emft/henshin/updates/nightly</url>
    </repository>
    <repository>
      <id>MoMOT</id>
      <layout>p2</layout>
      <url>http://martin-fleck.github.io/momot/eclipse/updates/latest/develop/</url>
    </repository>
    <repository>
      <id>AccessAnalysis</id>
      <layout>p2</layout>
      <url>http://accessanalysis.sourceforge.net/update</url>
    </repository>
    <repository>
      <id>plantuml</id>
      <layout>p2</layout>
      <url>http://files.idi.ntnu.no/publish/plantuml/repository/</url>
    </repository>
    <repository>
      <id>CARiSMA</id>
      <layout>p2</layout>
      <url>https://rgse.uni-koblenz.de/carisma/updatesite/</url>
    </repository>
  </repositories>
</project>
